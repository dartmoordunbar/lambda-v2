{%if tableB3 %}
{% set message = 'Table ' +  gettablenumber('new') + '.' %}
{{label(message,'Estimated soil erosion protection provided by different vegetation types in the chosen report area')}}
      <table style="width:100%">
        <tr class="header">
          <th>Landcover</th>
          <th>Area (ha)</th>
          <th>Total (tonnes of soil/yr)</th>
          <th>% of total</th>
          <th>Average per hectare (tonnes of soil/ha/yr)</th>
        </tr>
        {% for item in tableB3['soilerosion'] %}
        <tr>
          <td>
          {{item.name}}
          </td>
          <td>
          {{item.area | processNumber}}
          </td>
          <td>
          {{item.total | round | processNumber}}
          </td>
          <td>
          {{item.percent | processNumber}}
          </td>
          <td>
          {{item.avg | processNumber}}
          </td>
        </tr>
        {% endfor %}
        <tr class="subheader">
          <td class="subheader">
            Total
          </td>
          <td class="subheader">
            {{tableB3['soiltotal'].area | processNumber}}
          </td>
          <td class="subheader">
            {{tableB3['soiltotal'].tonnes | processNumber}}
          </td>
          <td class="subheader">
            {{tableB3['soiltotal'].percent | processNumber}}
          </td>
          <td class="subheader">
            {{tableB3['soiltotal'].average | processNumber}}
          </td>
        </tr>
      </table>
{% endif %}